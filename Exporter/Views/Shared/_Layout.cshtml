<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Выходные таблицы</title>
    @Styles.Render("~/Content/bootstrap-multiselect.css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")   

    <link rel="stylesheet" href="~/Content/styles/default.css" />
    <link rel="stylesheet" href="~/Content/CodeMirror/theme/dracula.css" />
    <link rel="stylesheet" href="~/Content/CodeMirror/lib/codemirror.css" />
    <link rel="stylesheet" href="~/Content/CodeMirror/addon/hint/show-hint.css" />
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    @Styles.Render("~/Content/assets/css/pe-icon-7-stroke.css")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (Request.IsAuthenticated)
                {
                    @Html.ActionLink("Выходные таблицы", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                }
                else
                {
                    @Html.ActionLink("Выходные таблицы", "Login", "Account", new { area = "" }, new { @class = "navbar-brand" })
                }
            </div>
            <div class="collapse navbar-collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer class="footer navbar-fixed-bottom">
        <div class="container">
            @if (DateTime.Now.Year == 2018)
            {
                <p class="copyright pull-right">&copy; @DateTime.Now.Year Отдел программирования ГВЦ</p>
            }
            else
            {
                <p class="copyright pull-right">&copy; 2018 - @DateTime.Now.Year Отдел программирования ГВЦ</p>
            }
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/bootstrap-multiselect.js")
    @Scripts.Render("~/Scripts/app.js")
    <script src="~/Scripts/highlight/highlight.pack.js"></script>
    <script src="~/Content/CodeMirror/lib/codemirror.js"></script>
    <script src="~/Content/CodeMirror/mode/sql/sql.js"></script>
    <script src="~/Content/CodeMirror/addon/hint/show-hint.js"></script>
    <script src="~/Content/CodeMirror/addon/hint/sql-hint.js"></script>
    <script src="~/Content/CodeMirror/addon/selection/active-line.js"></script>
    <script src="~/Content/CodeMirror/addon/edit/matchbrackets.js"></script>
    <script>hljs.initHighlightingOnLoad();</script>
    @RenderSection("scripts", required: false)
</body>
</html>
